{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest", "vite-plugin-svgr/client", "@testing-library/jest-dom"],
    "paths": { "@bangumi/website/*": ["packages/website/src/*"] }
  },
  "include": [
    "./packages",
    "./jest-setup.ts",
    ".eslintrc.js",
    "./packages/design/.storybook/*"
  ],
}
