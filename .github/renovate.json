{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "github>trim21/renovate-config:monthly"],
  "timezone": "Asia/Shanghai",
  "baseBranches": ["master"],
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "prConcurrentLimit": 2,
  "labels": ["dependencies", "ci:auto-merge"],
  "postUpdateOptions": ["pnpmDedupe"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "semanticCommitType": "build"
    },
    {
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "groupName": "eslint",
      "matchUpdateTypes": ["minor", "patch"],
      "semanticCommitType": "style",
      "matchPackageNames": ["@typescript-eslint/**", "eslint", "eslint-**"]
    },
    {
      "groupName": "oazapfts",
      "matchManagers": ["npm"],
      "matchPackageNames": ["@oazapfts/runtime", "oazapfts"]
    },
    {
      "groupName": "stylelint",
      "matchManagers": ["npm"],
      "matchPackageNames": ["stylelint", "stylelint-*"]
    },
    {
      "groupName": "react",
      "matchManagers": ["npm"],
      "matchPackageNames": ["react", "react-*", "*/react", "*-react", "*/react-*"]
    },
    {
      "matchManagers": ["github-actions"],
      "semanticCommitScope": "",
      "semanticCommitType": "ci"
    }
  ]
}
